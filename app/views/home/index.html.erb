<div id="stage" data-el="stage">

  <div id="artists" class="page" data-el="artists-page" data-role="page"></div>
  <div id="albums" class="page" data-el="albums-page" data-role="page"></div>
  <div id="songs" class="page" data-el="songs-page" data-role="page"></div>
  <div id="now-playing" class="page" data-el="now-playing-page" data-role="page"></div>

  <footer>
    <%= render "play_controls" %>
  </footer>
</div>

<% content_for :templates do %>
    <%= handlebars_template :partial => "artists_page", :id => "artists" %>
    <%= handlebars_template :partial => "albums_page", :id => "albums" %>
    <%= handlebars_template :partial => "songs_page", :id => "songs" %>
    <%= handlebars_template :partial => "now_playing" %>
    <%= handlebars_template :partial => "current_playlist" %>
<% end %>

<% content_for :scripts do %>
    <script>jQuery(function(){new App()})</script>
<% end %>